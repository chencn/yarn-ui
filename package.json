{
  "name": "yarn-ui",
  "displayName": "yarn-ui",
  "description": "yarn-ui for vscode",
  "version": "0.0.6",
  "publisher": "kazelone",
  "author": "xqchen",
  "icon": "resources/yarn-ui.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazelone/yarn-ui"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "keywords": [
    "npm",
    "yarn",
    "plugin",
    "yarn ui",
    "yarnui"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:yarn-ui-scripts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yarn-ui-view",
          "title": "Yarn",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "yarn-ui-view": [
        {
          "id": "yarn-ui-scripts",
          "name": "Scripts"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "yarn-ui setting",
      "properties": {
        "yarn-ui.setting.choose-yarn-or-npm": {
          "type": "string",
          "default": "yarn",
          "enum": [
            "yarn",
            "npm"
          ],
          "enumDescriptions": [
            "choose yarn",
            "choose npm"
          ],
          "description": "choose yarn or npm"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "eslint": "^5.13.0",
    "file-loader": "^4.2.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.36",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "@types/lodash.capitalize": "^4.2.6",
    "lodash.capitalize": "^4.2.1"
  }
}
